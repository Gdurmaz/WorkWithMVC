@model IEnumerable<Project.Core.Entities.Note>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="text-center col-md-12">
        <h4><i class="glyphicon glyphicon-list" aria-hidden="true"></i> Kategoriler </h4>
        <br />
        <hr />
        <br />
    </div>
</div>
<div class="row">
    <div class="col-md-9 col-md-offset-1">
        <p>
            <a href="/Notes/Create" class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span></a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td class="col-md-6 text-center">
                        <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#modal_comment" data-noteid="@item.Id">
                            <span class="glyphicon glyphicon-comment"></span>
                        </button>
                        <a href="/Notes/Edit/@item.Id" class="btn btn-warning" title="Düzenle"> <span class="glyphicon glyphicon-edit"></span></a>
                        <a href="/Notes/Details/@item.Id" class="btn btn-info" title="Detaylar"> <span class="glyphicon glyphicon-search"> </span></a>
                        <a href="/Notes/Delete/@item.Id" class="btn btn-danger" title="Kaldır"> <span class="glyphicon glyphicon-remove"> </span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@Modal.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comments-note.js"></script>