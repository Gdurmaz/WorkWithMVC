@using Project.Core.ViewModel
@model RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="~/Content/validationsummary.css" rel="stylesheet" />
    <!------ Include the above in your HEAD tag ---------->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
    <body>
        <div class="login-popup-wrap new_login_popup">
            <div class="login-popup-heading text-center">
                <h4><i class="glyphicon glyphicon-lock" aria-hidden="true"></i> Kayıt Formu </h4>
            </div>
            @Html.ValidationSummary(false)
            <form id="loginMember" role="form" action="" method="post">
                <div class="form-group col-lg-offset-1">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                </div>
                <div class="form-group col-lg-offset-1">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mailiniz", type = "email" })
                </div>
                <div class="form-group col-lg-offset-1">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                </div>
                <div class="form-group col-lg-offset-1">
                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Tekrar Şifreniz", type = "password" })
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-default login-popup-btn" name="submit" value="1">Kayıt</button>
                </div>
            </form>
        </div>
    </body>
}

